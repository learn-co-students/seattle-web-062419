<%= stylesheet_link_tag "application.css" %>

<div class="wrapper">

    <div class="image">
        <img src="http://scriptedstudents.files.wordpress.com/2014/04/wordmark-3.png?w=300" width="200px">
    </div>

    <div class="title">
        <h1>Welcome to Frivial Pursuit</h1>
    </div>

    <div class="description"> 
        <p>
        This is a game meant to test both your mental and emotional capabilities. But we're all great at both so we'll win win win win!
        </p>
    </div>

    <div class="results">
        <div>
            <h4> Correct So Far: <%= session[:number_correct] %> </h4>
        </div>
        <div>
            <h3> <%= flash[:message] %> </h3>
        </div>
    </div>

    <div class="question">
        <h2><%= @question.content %></h2>
        <%= form_with model:@questionResponse do | form | %>
            <%= form.hidden_field :question_id %>
            <label>Choices:</label>
            <% @question.random_answers.each do | answer | %>
                <div class="radio-button">
                    <label><%= answer.content %></label>
                    <%= form.radio_button :answer_id, answer.id%>
                </div>
            <% end %>
            <%= form.submit "Submit"%>
        <% end %>
    </div>
</div>